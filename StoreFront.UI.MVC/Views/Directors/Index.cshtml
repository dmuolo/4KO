@model IEnumerable<StoreFront.DATA.EF.Director>

@{
    ViewBag.Title = "Directors Index";
}

<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
                <div id="blog-post" class="col-lg-9 text-center">
                    <div class="box text-center">
                        <h1>@ViewBag.Title</h1>
                        <br />
                        <div class="text-center" id="post-content">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.DirectorID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.DirectorID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.DirectorID })
                                        </td>
                                    }
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                    <!-- /.box-->
                </div>
                <!-- /#blog-post-->
                <div class="col-lg-3">
                    <!--
                    *** BLOG MENU ***
                    _________________________________________________________
                    -->
                    <div class="card sidebar-menu mb-4">
                        <div class="card-header">
                            <h3 class="h4 panel-title">Manage Directors</h3>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="card-body">
                                <ul class="nav flex-column nav-pills">
                                    <li>
                                        <a href="@Url.Action("Create", "Directors")" class="nav-link class=@if (ViewBag.Title == "Create Director")
                            {
                            @Html.Encode(Html.Raw("<html> active </html>"));
                                        }">Create</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        </div>
                    <!-- /.col-lg-3-->
                    <!-- *** BLOG MENU END ***-->
                    <div class="banner"><img src="~/Content/img/SliderBanner.png" alt="Logo Banner" class="img-fluid bannerPhoto"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
