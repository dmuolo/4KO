@model StoreFront.DATA.EF.MovieTitle

@{
    ViewBag.Title = "Delete Movie";
}

<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
                <div id="blog-post" class="col-lg-9">
                    <div class="box text-center">
                        <div id="post-content col-lg-6">
                            <div>
                                <h3 style="color: red;">Are you sure you want to delete @Html.DisplayFor(model => model.MovieTitle1) (@Html.DisplayFor(model => model.Category.Category1))?</h3>
                                <hr />
                                <dl class="dl-horizontal">

                                    <img src="~/Content/img/ProductImages/@Model.Image" alt="Movie cover" title="@Model.MovieTitle1" class="img-fluid col-lg-3 text-center" />

                                    <br />
                                    <br />

                                    <dt>
                                        @Html.DisplayNameFor(model => model.UnitsInStock)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.UnitsInStock)
                                    </dd>

                                </dl>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    if (User.IsInRole("Admin"))
                                    {

                                        <div class="form-actions no-color">
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <!-- /.box-->
                </div>
                <!-- /#blog-post-->
                <div class="col-lg-3">
                    <!--
                    *** BLOG MENU ***
                    _________________________________________________________
                    -->
                    <div class="card sidebar-menu mb-4">
                        <div class="card-header">
                            <h3 class="h4 panel-title">Manage Movies</h3>
                        </div>
                        <div class="card-body">
                            <ul class="nav flex-column nav-pills">
                                <li>
                                    <a href="@Url.Action("Create", "MovieTitles")" class="nav-link class=@if (ViewBag.Title == "Create")
                            {
                            @Html.Encode(Html.Raw("<html> active </html>"));
                        }">Create</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "MovieTitles")" class="nav-link">Back to Movies</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.col-lg-3-->
                    <!-- *** BLOG MENU END ***-->
                    <div class="banner"><img src="~/Content/img/SliderBanner.png" alt="Logo Banner" class="img-fluid bannerPhoto"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
